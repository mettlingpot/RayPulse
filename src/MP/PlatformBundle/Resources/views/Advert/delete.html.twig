{% extends "MPPlatformBundle::layout.html.twig" %}

{% block title %}
  Supprimer un evenement - {{ parent() }}
{% endblock %}

{% block MP_body %}

  <h2>Supprimer un événement</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'événement "{{ advert.title }}" ?
  </p>

  <form action="{{ path('mp_platform_delete', {'id': advert.id}) }}" method="post">
    <a href="{{ path('mp_platform_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}
