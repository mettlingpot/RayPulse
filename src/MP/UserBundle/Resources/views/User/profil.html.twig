{% extends "MPPlatformBundle::layout.html.twig" %}
{% block body %}
    <h3>Favoris</h3>

<div class="well">
    {% for advert in listFavoris %}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
            {% if advert.image is not null %}
                <img class="img-responsive"  src="{{ asset(advert.image.uploadDir ~ '/' ~ advert.image.url) }}" alt="{{ advert.image.alt }}">
            {% endif %}
                <div class="caption">
                    <h3>{{ advert.title }}</h3>
                    <p>{% if advert.adresse is not null %}{{ advert.adresse.ville }} {% endif %}</p>
                    <a href="{{ path('mp_platform_view', {'id': advert.id}) }}" class="btn btn-xs btn-primary" role="button" title="En savoir +">En savoir +</a>
                        <a href="{{ path('mp_platform_favoris', {'id': advert.id}) }}" class="btn btn-xs btn-primary btn-danger" role="button" title="En savoir +">retirer favoris</a>
                </div>
            </div>
        </div>
            {% else %}
                Vous pouvez ajouter ici une liste de vos événements favoris.
            {% endfor %}

</div>

    <h3>Mes événements</h3>
<div class="well">
    {% for advert in listAdverts %}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
            {% if advert.image is not null %}
                <img class="img-responsive"  src="{{ asset(advert.image.uploadDir ~ '/' ~ advert.image.url) }}" alt="{{ advert.image.alt }}">
            {% endif %}
                <div class="caption">
                    <h3>{{ advert.title }}</h3>
                    <p>{% if advert.adresse is not null %}{{ advert.adresse.ville }} {% endif %}</p>
                    <p><a href="{{ path('mp_platform_edit', {'id': advert.id}) }}"  class="btn btn-xs btn-primary" role="button">Modifier  <i class="glyphicon glyphicon-edit"></i></a> 
                    <a href="{{ path('mp_platform_delete', {'id': advert.id}) }}" class="btn btn-xs btn-primary btn-danger">Supprimer <i class="glyphicon glyphicon-trash">     </i></a></p>
                </div>
            </div>
        </div>
        {% else %}
            Pas (encore !) d'événement 
        <a href="{{ path('mp_platform_add') }}">Ajouter un événement</a>
        {% endfor %}
</div>
{% endblock %}    